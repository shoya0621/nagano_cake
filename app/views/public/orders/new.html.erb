<h1>注文情報入力</h1>

<p>支払方法</p>
<%= form_with model: @order,method: :post do |f| %>
 <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
 <%= f.label :payment_method_credit_card, Order.payment_methods_i18n[:credit_card] %>
 <%= f.radio_button :payment_method, Order.payment_methods.key(2) %>
 <%= f.label :payment_method_transfer, Order.payment_methods_i18n[:transfer]%>
 

<p>お届け先</p>
 <%= f.radio_button :address_select, 0 %>
 <%= f.label :address_select, "ご自身の住所" %>
 <%= current_customer.customer_address_display %>
 
 <%= f.radio_button :address_select, 1 %>
 <%= f.label :address_select, "登録済住所から選択" %>

  <%= f.select :address_id, options_from_collection_for_select(Address.where(customer_id: current_customer.id), :id, :address_display) %>
  
 <%= f.radio_button :address_select, 2 %>
 <%= f.label :address_select, "新しいお届け先" %>
  <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
  <%= f.text_field :postal_code %>
  <%= f.label :address, "住所" %>
  <%= f.text_field :address %>
  <%= f.label :name, "宛名" %>
  <%= f.text_field :name %>
  
<% end %>