<div class="container">
 <h2 class="my-2 mx-5">注文履歴詳細</h2>
 <div class="row">
  <div class="col-6">
   <h5 class="py-1">注文情報</h5>
   <table class="table table-bordered">
    <tbody>
     <tr>
      <th scope="row">注文日</th>
      <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
     </tr>
     <tr>
      <th scope="row">配送先</th>
      <td>
       <%= "〒" + @order.postal_code %>
       <%= @order.address %>
       <%= @order.name %>
      </td>
     </tr>
     <tr>
      <th scope="row">支払方法</th>
      <td><%= @order.payment_method_i18n %></td>
     </tr>
     <tr>
      <th scope="row">ステータス</th>
      <td><%= @order.status_i18n %></td>
     </tr>
    </tbody>
   </table>
  </div>
  <div class="col-4">
   <h5 class="py-1">請求情報</h5>
   <table class="table table-bordered">
    <tbody>
     <tr>
      <th scope="row">商品合計</th>
      <td><%= @order.payment - @order.shipping_fee %></td>
     </tr>
     <tr>
      <th scope="row">配送料</th>
      <td><%= @order.shipping_fee %></td>
     </tr>
     <tr>
      <th scope="row">ご請求額</th>
      <td><%= @order.payment %></td>
     </tr>
    </tbody>
   </table>
   </div>
 </div>
 <div class="row">
  <div class="col-6">
   <h5 class="py-1">注文内容</h5>
   <table class="table table-bordered">
    <thead>
     <tr>
      <th scope="col">商品</th>
      <th scope="col">単価(税込)</th>
      <th scope="col">個数</th>
      <th scope="col">小計</th>
     </tr>
    </thead>
    <% @order_details.each do |order_detail| %>
    <tbody>
     <tr>
      <td><%= order_detail.item.name %></td>
      <td><%= order_detail.purchase_unit_price %></td>
      <td><%= order_detail.quantity %></td>
      <td><%= order_detail.purchase_unit_price * order_detail.quantity %></td>
     </tr>
    </tbody>
    <% end %>
   </table>
  </div>
 </div>

</div>