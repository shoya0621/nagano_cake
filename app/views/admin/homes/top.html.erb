<div class="container">
 <div class="row d-flex align-items-center justify-content-between py-3">
  <h2 class="my-2">注文履歴一覧</h2>
  <table class="table">
   <thead>
    <tr>
     <th scope="col">購入日時</th>
     <th scope="col">購入者</th>
     <th scope="col">注文個数</th>
     <th scope="col">注文ステータス</th>
    </tr>
   </thead>
   <% @orders.each do |order| %>
   <tbody>
    <tr>
     <td class="align-middle"><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order.id) %></td>
　   <td class="align-middle"><%= order.customer.last_name + order.customer.first_name %></td>
　   <td class="align-middle">
　    <% order.order_details.each do |order_detail| %>
       <% @total_amount += order_detail.quantity %>
      <% end %>
      <%= @total_amount %>
　   </td>
　   <td class="align-middle"><%= order.status_i18n %></td>
    </tr> 
   </tbody>
   <% end %>
  </table>
  <%= paginate @orders %>
 </div>
</div>