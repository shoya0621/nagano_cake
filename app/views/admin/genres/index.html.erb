<div class="container">
 <h4 class="my-4">ジャンル一覧・追加</h4>
 <div class="row">
  <h5 class="col-2">ジャンル名</h5>
  <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
   <%= f.text_field :name,class: "align-middle",placeholder: "ジャンル名" %>
   <%= f.submit "新規登録",class: "btn btn-sm btn-success ml-3" %>
  <% end %>
 </div>
 <div class="row mt-5">
  <div class="col-6">
   <table class="table">
    <thead>
     <tr>
      <th scope="col" style= "width: 70%">ジャンル</th>
      <th scope="col" style= "width: 30%"></th>
     </tr>
    </thead>
    <% @genres.each do |genre| %>
    <tbody>
     <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集する",  edit_admin_genre_path(genre.id),class: "btn btn-sm btn-success" %></td>
     </tr>
    </tbody>
    <% end %>
   </table>
  </div>
 </div>
</div>