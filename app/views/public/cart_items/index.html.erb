<h1>ショッピングカート</h1>
<%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete %>
<% @cart_items.each do |cart_item| %>

 <p>商品名</p>
 <%= cart_item.item.name %>
 
 <p>単価(税込)</p>
 <%= cart_item.item.with_tax_price %>
 
 <p>数量</p>
 <%= form_with model: @cart_item, url: cart_item_path(cart_item.id), method: :patch do |f| %>
  <%= f.select :amount, options_for_select(*[1..10], selected: cart_item.amount) %>
  <%= f.submit "変更" %>
 <% end %>
 
 <p>小計</p>
 <%= cart_item.subtotal %>
 <% @total = @total + cart_item.subtotal %>
 
 <%= link_to "削除する", cart_item_path(cart_item.id), method: :delete %>
 
 
<% end %>

<p>合計金額</p>
<%= @total %>

<%= link_to "買い物を続ける", items_path %>
<%= link_to "情報入力に進む", new_order_path %>