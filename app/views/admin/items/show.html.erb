<h1>商品詳細</h1>
<% if @item.image.attached? %>
 <%= image_tag @item.image, size: "200x200" %>
<% else %>
 <%= image_tag 'no_image', size: "200x200" %>
<% end %>
<p>商品名</p>
<%= @item.name %>
<p>商品説明</p>
<%= @item.introduction %>
<p>ジャンル</p>
<%= @item.genre.name %>
<p>税抜価格</p>
<%= @item.price %>
<p>販売ステータス</p>
 <% if @item.is_active %>
  <p>販売中</p>
 <% else %>
  <p>販売停止中</p>
 <% end %>

<%= link_to "編集", edit_admin_item_path(@item.id) %>

